<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/questionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingLeft="40dp"
        android:text="Medium Text"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/questionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_imageView"
        android:layout_toRightOf="@+id/item_imageView"
        android:paddingLeft="40dp"
        android:text="Medium Text"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/question_imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/puma" />

    <RelativeLayout
        android:id="@+id/relative_layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_layout"
        android:onClick="relativeClick" >

        <TextView
            android:id="@+id/item_answer1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Medium Text"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/item_goodAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="POPRAWNA"
            android:textColor="@color/green"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_chosenAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_goodAnswer1"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:text="WYBRANA"
            android:textColor="@color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout"
        android:onClick="relativeClick" >

        <TextView
            android:id="@+id/item_answer2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Medium Text"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/item_goodAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="POPRAWNA"
            android:textColor="@color/green"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_chosenAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_goodAnswer2"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:text="WYBRANA"
            android:textColor="@color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout"
        android:onClick="relativeClick" >

        <TextView
            android:id="@+id/item_answer3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Medium Text"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/item_goodAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="POPRAWNA"
            android:textColor="@color/green"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_chosenAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_goodAnswer3"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:text="WYBRANA"
            android:textColor="@color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_weight="0.26"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/helper1"
        android:textColor="@color/red"
        android:visibility="visible" />

</LinearLayout>